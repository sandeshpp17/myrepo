 
      yum install nfs-utils -y  
      systemctl restart nfs-server
      mkdir /mydata 
      chown nfsnobody:nfsnobody /mydata
      chmod 777 /mydata
      vi /etc/exports
      exportfs -r    8  exportfs -rv
      hostname -i   10  mount -t 172
      mount -t 172.17.0.12:/mydata /mnt
      mount -t nfs 172.17.0.12:/mydata /mnt
      df -h   14  df -hT
      df -hT | grep mnt
